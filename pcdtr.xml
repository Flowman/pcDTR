<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system">
	<name>System - pcDTR</name>
	<author>Otherland</author>
	<creationDate>March 2010</creationDate>
	<copyright>Otherland.</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
	<authorEmail>info@otherland.se</authorEmail>
	<authorUrl>www.otherland.se</authorUrl>
	<version>3.1.4</version>
	<description>PCDTR DESCRIPTION</description>
 	<languages>
      <language tag="en-GB">en-GB.plg_system_pcdtr.ini</language>
    </languages>
	<files>
		<filename plugin="pcdtr">pcdtr.php</filename>
		<filename>pcdtr/index.html</filename>
		<filename>pcdtr/css.php</filename>
		<filename>pcdtr/parseCSS.php</filename>
		<filename>pcdtr/simple_html_dom.php</filename>
	</files>
	<media destination="pcdtr" folder="media">
		<filename>fonts/Brody.ttf</filename>
		<filename>css/styles.css</filename>
	</media>
	<params>
		<param name="default_css" type="text" size="60" default="media/pcdtr/css/styles.css" label="PCDTR LABEL DEFAULT" description="PCDTR DESC DEFAULT" />
		<param name="custom_css" type="textarea" rows="2" cols="45" default="" label="PCDTR LABEL CUSTOM" description="PCDTR DESC CUSTOM" />
		<param name="fonts_dir" type="text" size="60" default="media/pcdtr/fonts" label="PCDTR LABEL FONTS" description="PCDTR DESC FONTS" />
		<param name="cache_images" type="radio" default="1" label="PCDTR LABEL CACHE" description="PCDTR DESC CACHE">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="letter_wrap" type="text" size="5" default="25" label="PCDTR LABEL WRAP" description="PCDTR DESC WRAP" />
		<param name="resample_rate" type="text" size="1" default="1" label="PCDTR LABEL RATE" description="PCDTR DESC RATE" />
		<param name="test_string" type="text" size="20" default="ÁIJQÇjgx/@#()" label="PCDTR LABEL TEST" description="PCDTR DESC TEST" />
		<param name="skip_class" type="text" size="50" default="mce_editable,mceEditor" label="PCDTR LABEL SKIP" description="PCDTR DESC SKIP" />
	</params>
</install>
